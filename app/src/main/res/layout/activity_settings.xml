<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaults_title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:paddingBottom="12dp" />

        <EditText
            android:id="@+id/defaultDurationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_duration_hint"
            android:inputType="number" />

        <EditText
            android:id="@+id/defaultDifficultyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_difficulty_hint"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/saveDefaultsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
